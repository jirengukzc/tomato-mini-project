/* components/clock/clock.wxss */
.clock {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.clock text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  color: #fff;
  font-size: 26rpx;
}

.clock image { 
  width: 320rpx;
  height: 320rpx;
}

.active {
  opacity: 0.9;
}