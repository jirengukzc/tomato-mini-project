/* components/confirm/confirm.wxss */
.container {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: rgb(0,0,0,0.2);
}

.confirm {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  width: 640rpx;
  padding: 26rpx 20rpx 0 20rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

textarea {
  background: #f2f2f2;
  border-radius: 8rpx;
  width: 100%;
  height: 120rpx;
  margin-bottom: 22rpx;
  color: #737373;
  padding: 20rpx;
  font-size: 28rpx;
}

.actions {
  display: flex;
  width: 100%;
  position: relative;
}
.actions > view {
  width: 50%;
  text-align: center;
  height: 66rpx;
}
.actions > view.active { 
  opacity: 0.5;
}
.actions .sure { 
  color: #F6705A;
}
.actions::after {
  content: '';
  background: #F6705A;
  width: 4rpx;
  height: 70%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}